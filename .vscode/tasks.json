{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "group": "build",
            "command": "just build",
            "problemMatcher": ["$msCompile", "$tsc"],
        },
        {
            "label": "Create Migration",
            "type": "shell",
            "command": "just migrate ${input:migration-name}",
            "problemMatcher": ["$msCompile"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Update Database",
            "type": "shell",
            "command": "just update-db",
            "problemMatcher": ["$msCompile"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Restore Project",
            "type": "shell",
            "command": "just restore",
            "problemMatcher": ["$msCompile"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ],
    "inputs": [
        {
            "id": "migration-name",
            "type": "promptString",
            "description": "Enter migration name"
        }
    ]
}
