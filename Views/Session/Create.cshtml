@model CreateGameModel
@{
    ViewData["Title"] = "Create Game";
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="StartPage"></label>
        <input asp-for="StartPage" class="form-control" />
        <span asp-validation-for="StartPage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndPage"></label>
        <input asp-for="EndPage" class="form-control" />
        <span asp-validation-for="EndPage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaxPlayers"></label>
        <input asp-for="MaxPlayers" class="form-control" value="20" />
        <span asp-validation-for="MaxPlayers" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GameType"></label>
        <select asp-for="GameType" asp-items="Html.GetEnumSelectList<GameType>()" class="form-control"></select>
        <span asp-validation-for="GameType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DisplayName"></label>
        <input asp-for="DisplayName" class="form-control" />
        <span asp-validation-for="DisplayName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>